# Mapping Application Environment Variables
# Copy this file to .env and replace the placeholders with your actual values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Mapbox API token (required)
# Get this from https://account.mapbox.com/
MAPBOX_TOKEN=your_mapbox_token_here

# Google API key for Gemini API (required)
# Get this from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# CloudFlare Pages uses this variable name, so we duplicate it for compatibility
GEMINI_API_KEY=your_google_api_key_here

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Set to 'true' to use mock data instead of actual Gemini API calls
# Useful for development without API limits or for testing
USE_MOCK_DATA=false

# Port for the server (defaults to 3000 if not specified)
PORT=3000

# Optional: Set node environment (development, production, test)
NODE_ENV=development

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# For CloudFlare Pages deployment, set these environment variables in the 
# CloudFlare dashboard under:
# Pages > Your Project > Settings > Environment variables 